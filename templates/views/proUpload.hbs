  <body style="background-color:#f1f2f4;">
    {{>nav}}





<div class="card mt-5 mb-5">
  <div class="card-header text-center">
   <h1> Upload Your Products</h1>
   <h6 class="text-center">choose your products to upload!</h6>
  </div>
  <div class="card-body dark">
<div class="container">

<div class="row">

<div class="col-md-12">

<div class="container conta">



   {{#if val}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{msg}}
  <button type="button" class="close " data-dismiss="alert" aria-label="Close" style="width:1% ;">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
   {{/if}}


<form style="width: 50%;" method="post" action="proUpload" class="mb-5 form">
  <div class="form-group">
    <label for="exampleInputName">Enter Product Name</label>
    <input type="text" class="form-control " id="exampleInputName" aria-describedby="emailHelp" placeholder="Enter Name" name="proNm" required="true">
  </div>

 <div class="form-group">
    <label for="exampleInputEmail1">Enter Product Price</label>
    <input type="number" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Price" name="proPr" required="true">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Enter Product Discount.</label>
    <input type="number" class="form-control" id="exampleInputPassword1" placeholder="product discount" name="proDis" required="true">
  </div>


  <div class="form-group">
    <label for="exampleInputPassword1">Enter Product Quantity.</label>
    <input type="number" class="form-control" id="exampleInputPassword1" placeholder="product quantity" name="proQua" required="true">
  </div>



  
  <div class="form-group">
    <label for="exampleInputPassword1">Product Description <span style="color:red;"> *</span></label>

      <div class="form-group">
    <textarea class="form-control" name="proDes" id="exampleFormControlTextarea1" rows="3" style="resize:none;"></textarea>
  </div>
  </div>

  <button type="submit" class="btn btn-success button">Upload Product</button>
</form>



</div>






</div>


</div>


</div> 
  </div>
</div>

